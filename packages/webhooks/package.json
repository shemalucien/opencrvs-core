{
  "name": "@opencrvs/webhooks",
  "version": "1.3.0-beta",
  "description": "OpenCRVS webhooks service",
  "license": "MPL-2.0",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "start:prod": "TS_NODE_BASEURL=./build/dist/src node -r tsconfig-paths/register build/dist/src/index.js",
    "test": "jest  --coverage --silent --noStackTrace --forceExit && yarn test:compilation",
    "test:watch": "jest --watch",
    "open:cov": "yarn test && opener coverage/index.html",
    "lint": "eslint -c .eslintrc.js --fix ./src",
    "precommit": "yarn lint && lint-staged",
    "test:compilation": "tsc --noEmit",
    "build": "tsc",
    "build:clean": "rm -rf build"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.1",
    "@hapi/hapi": "^20.0.1",
    "@opencrvs/commons": "^1.3.0-beta",
    "@types/hapi-pino": "8.0.5",
    "@types/pino": "^6.3.12",
    "app-module-path": "^2.2.0",
    "bullmq": "^1.9.0",
    "crypto": "^1.0.1",
    "hapi-auth-jwt2": "10.2.0",
    "hapi-pino": "^8.5.0",
    "hapi-sentry": "^3.1.0",
    "jest-fetch-mock": "^2.1.2",
    "joi": "^17.3.0",
    "jsonwebtoken": "^8.3.0",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.11",
    "mongoose": "^6.6.1",
    "node-fetch": "^2.6.7",
    "pino": "^6.0.0",
    "redis": "^3.0.2",
    "short-uid": "^0.1.0",
    "tsconfig-paths": "^3.13.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/fhir": "^0.0.30",
    "@types/hapi__boom": "^9.0.1",
    "@types/hapi__hapi": "^20.0.0",
    "@types/ioredis": "^4.28.5",
    "@types/jest": "^26.0.14",
    "@types/jwt-decode": "^2.2.1",
    "@types/lodash": "^4.14.135",
    "@types/node-fetch": "^2.5.12",
    "@types/redis": "^2.8.26",
    "@types/uuid": "^3.4.3",
    "cross-env": "^5.2.0",
    "jest": "26.6.0",
    "mockingoose": "^2.15.2",
    "nodemon": "^1.17.5",
    "prettier": "^2.5.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^6.1.1",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "src/**/*.{ts,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@webhooks/(.*)": "<rootDir>/src/$1"
    },
    "setupFiles": [
      "./test/setupJest.ts"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  }
}
